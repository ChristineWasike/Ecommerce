<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <ImageView
            android:id="@+id/appleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="photoToAnimate"
            android:layout_centerHorizontal="true"
            tools:targetApi="lollipop"/>

    <ImageView
            android:id="@+id/saleImage"
            android:src="@drawable/ic_monetization_on_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/appleImage"
            android:layout_marginRight="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_alignEnd="@+id/appleImage"
            android:layout_above="@+id/productTitle"
            android:layout_marginBottom="74dp"
            android:layout_marginLeft="74dp"
            android:layout_marginStart="74dp"
            android:layout_alignLeft="@+id/appleImage"
            android:layout_alignStart="@+id/appleImage"
            android:layout_alignTop="@+id/appleImage"
            android:layout_marginTop="3dp"/>

    <TextView
            android:layout_below="@+id/appleImage"
            android:layout_centerHorizontal="true"
            android:id="@+id/productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fresh_apple_fragrance"
            android:layout_marginTop="5dp"/>

    <TextView
            android:id="@+id/priceTag"
            android:text="@string/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/productTitle"
            android:layout_marginTop="5dp"/>

</RelativeLayout>